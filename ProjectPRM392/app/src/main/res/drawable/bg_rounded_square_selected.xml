<?xml version="1.0" encoding="utf-8"?>
<shape xmlns:android="http://schemas.android.com/apk/res/android"
    android:shape="rectangle">
    <!-- Màu nền xanh khi được chọn -->
    <solid android:color="@color/lightOrange" /> <!-- Màu xanh lá cây, bạn có thể thay đổi -->
    <!-- Bo góc -->
    <corners android:radius="12dp" />
    <!-- Đường viền (tùy chọn) -->
    <stroke
        android:width="1dp"
        android:color="@color/orange" /> <!-- Viền màu xanh đậm hơn -->
</shape>
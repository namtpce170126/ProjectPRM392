        <activity
            android:name=".ProductControl.AddingProduct"
            android:exported="false" />
        <activity
            android:name=".ProductControl.ProductList"
            android:exported="true" />
        <activity
            android:name=".ProductControl.ProductDetailAdmin"
            android:exported="true" />
        <activity
            android:name=".Admin.Dashboard"
            android:exported="true">

        </activity>
        <activity
            android:name=".PermissionControl.LoginActivity"
            android:exported="true" />
        <activity
            android:name=".PermissionControl.RegisterActivity"
            android:exported="true" />
        <activity
            android:name=".PermissionControl.Permisson"
            android:exported="true" />
        <activity
            android:name=".ProductControlU.CartActivity"
            android:exported="true" />
        <activity
            android:name=".ProductControlU.ProductActivity"
            android:exported="true">

        </activity>
        <activity
            android:name=".MainActivity"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".ProductControlU.DashboardActivity"
            android:exported="true" />
    </application>

</manifest>